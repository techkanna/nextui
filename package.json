{
  "name": "@techkanna/nextui",
  "version": "0.1.0",
  "description": "UI library for Next.js apps",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.(js|jsx|ts|tsx|css|scss)\" || true",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "clsx": "2.1.1"
  },
  "devDependencies": {
    "rimraf": "6.0.1",
    "@rollup/plugin-commonjs": "28.0.6",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "12.1.4",
    "@storybook/addon-docs": "9.1.3",
    "@storybook/addon-onboarding": "9.1.3",
    "@storybook/react": "9.1.3",
    "@storybook/react-vite": "9.1.3",
    "@testing-library/jest-dom": "6.6.4",
    "@testing-library/react": "16.3.0",
    "@types/react": "18.3.23",
    "@types/react-dom": "18.3.7",
    "@typescript-eslint/eslint-plugin": "8.39.0",
    "@typescript-eslint/parser": "8.39.0",
    "autoprefixer": "10.4.21",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-storybook": "9.1.3",
    "jest": "30.0.5",
    "jest-environment-jsdom": "30.0.5",
    "postcss": "8.5.6",
    "postcss-loader": "8.1.1",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "rollup": "4.49.0",
    "rollup-plugin-dts": "6.2.3",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-postcss": "4.0.2",
    "storybook": "9.1.3",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "3.4.17",
    "typescript": "5.3.3"
  },
  "keywords": [
    "techkanna",
    "nextjs",
    "ui",
    "components"
  ],
  "author": "techkanna",
  "license": "MIT",
  "homepage": "https://github.com/techkanna/nextui#readme",
  "bugs": {
    "url": "https://github.com/techkanna/nextui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techkanna/nextui.git"
  }
}
